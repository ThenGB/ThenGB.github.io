{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Python HTTP Server",
      "type": "shell",
      "command": "python -m http.server 8000 --directory webapp",
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 0
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Serving HTTP on.*",
          "endsPattern": ".*Keyboard interrupt received.*"
        }
      },
      "isBackground": true
    }
  ]
}
